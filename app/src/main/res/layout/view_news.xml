<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/news_layout"
    android:layout_margin="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_6sdp"
    android:paddingEnd="@dimen/_6sdp"
    android:paddingTop="@dimen/_6sdp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp">


    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Rivian raises $10.5B in one of the hottest IPOs of 2021"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/news_poster"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/news_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Everest to bring Canadian biotech's potential COVID shots to China, other markets - Reuters"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/news_poster"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:background="@drawable/corner_bg"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:backgroundTint="@color/light_grey2"
        app:layout_constraintStart_toStartOf="@id/news_description"
        app:layout_constraintTop_toBottomOf="@id/news_description"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/dark_grey"
            android:text="Sampath Houde"
            android:textSize="@dimen/_6sdp"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/news_poster"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/news_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>